<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Account name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Account Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twAccountName"
            android:gravity="center"/>

        <EditText
            android:text="accname"
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
 />

    </LinearLayout>
    <!-- Username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Username:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twUsername"
            android:gravity="center" />

        <EditText
            android:hint="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameView"
            android:gravity="center"/>


    </LinearLayout>
    <!-- Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twPassword"
            android:gravity="center"/>

        <EditText
            android:hint="Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordView"
            android:gravity="center" />

        <Button
            android:text="Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCopy"
            android:onClick="copyOldText"
            android:gravity="center"
            android:layout_gravity="end"
            />

    </LinearLayout>
    <!-- Note-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Note:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twNote"
            android:gravity="center"/>

        <EditText
            android:hint="note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteView"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Old Pass-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Current Password: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twOldPass"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twOldPasswordField"
            android:text="---"
            android:gravity="center"/>

    </LinearLayout>
    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:text="Copy Old Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCopyOld"
            android:onClick="copyOldText"
            android:gravity="center"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:onClick="saveChanges"
            android:gravity="center"/>

        <Button
            android:text="New Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newPassword"
            android:onClick="createPassword"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:text="Delete Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAccountButton"
        android:onClick="deleteAccount" />

</LinearLayout>